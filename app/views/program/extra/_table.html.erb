<div class="row py-5">
    <div class="col-md-12 info_box table-responsive">
        <table class="table caption-top table-striped table-hover table-borderedless border-dark ">
            <caption>Programas existentes:</caption>
            <thead>
                <tr>
                    <th scope="col">N°</th>
                    <th scope="col">Programa</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Estado</th>
                    <th scope="col">Opción</th>
                </tr>
            </thead>
            <tbody>
                <% @programs.each do |program| %>
                    <tr>
                        <th scope='row'>#<%= program.id %></th>
                        <td><%= program.name %></td>
                        <td><%= program.description %></td>
                        <td>Estado: <%= program.status %></td>
                        <td>
                        <button type="button" class="btn btn-warning btn-circle" data-bs-toggle="modal" 
                        data-bs-target="#editarProgramaModal" data-bs-id="<%= program.id %>" data-bs-nombre="<%= program.name %>" 
                        data-bs-desc="<%= program.description %>"><i class="fa-solid fa-pen-to-square"></i> Modificar</button>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
    </div>
</div>