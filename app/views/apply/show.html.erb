<body>
        
    <%= render "shared/navbar_form" %>


    <div class="container">

        <div class="row py-5">
            <div class="col-12">
                <h2 class="text-center">Postulación #</h2>
            </div>
        </div>

        <% if @is_able_to_modify == true %>
            <%= render "apply/verify/button_modal" %>    
        <% end %>

        <div class="row py-5">
            <div class="col">
                <h4 class="text-center">Estado</h4>
            </div>
        </div>

        <div class="row py-1">
            <label class="col-md-4 control-label" for="nombre">Identificador de la postulación</label>
            <div clasS="col-md-8">
                <input class="form-control" type="number" name="email_institucional" size="30" readonly="true" value=''>
            </div>
        </div>

        <div class="row py-1">
            <label class="col-md-4 control-label" for="nombre">Estado de la postulación</label>
            <div clasS="col-md-8">
                <input class="form-control" type="text" name="email_institucional" size="30" readonly="true" value=''>
